{
  "name": "flowmatic-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack --port 4000",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "eslint",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "npx vitest run --coverage src/app/page.test.tsx src/lib/__tests__/auth-service.test.ts src/lib/__tests__/auth-store.test.tsx src/lib/__tests__/error-mapping.test.ts src/lib/hooks/__tests__/use-projects.test.ts",
    "test:coverage-all": "npx vitest run --coverage --bail=0",
    "test:coverage-full": "node scripts/generate-full-coverage.js",
    "test:ui": "vitest --ui",
    "sonar:start": "docker-compose -f docker-compose.sonarqube-frontend.yml up -d",
    "sonar:stop": "docker-compose -f docker-compose.sonarqube-frontend.yml down",
    "sonar:scan": "sonar-scanner",
    "quality": "npm run test:coverage && npm run lint && npm run typecheck"
  },
  "dependencies": {
    "@emailjs/browser": "^4.4.1",
    "@types/styled-components": "^5.1.34",
    "lucide-react": "^0.544.0",
    "next": "15.5.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "styled-components": "^6.1.19",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitest/coverage-v8": "^1.6.1",
    "@vitest/ui": "^1.6.1",
    "autoprefixer": "^10.4.21",
    "c8": "^10.1.3",
    "eslint": "^9",
    "eslint-config-next": "15.5.3",
    "jsdom": "^24.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.6",
    "vitest": "^1.6.1"
  }
}
